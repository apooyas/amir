<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productLL"
    android:layout_width="match_parent"
    android:columnCount="3"
    android:orientation="horizontal"
    android:layout_height="wrap_content" android:layout_marginBottom="1dp" android:layout_marginTop="1dp">
    <ImageView android:layout_width="0dp"
        android:layout_height="150dp"
        android:id="@+id/productIV"
        android:layout_margin="2dp"
        android:layout_gravity="start"
        android:layout_weight="20"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
       />
        <TableLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:layout_gravity="start"
            android:layout_weight="70"
        >
            <TableRow>
                <ImageView android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:contentDescription="brand logo"
                    android:id="@+id/brandLogoIV"
                    android:layout_margin="2dp"
                    android:layout_gravity="left"
                    android:layout_weight="30"
                    />
                <TextView android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:text=" "
                    />
            </TableRow>
        <TableRow>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="Type"
                android:id="@+id/typeTV"
                android:enabled="false"
                android:inputType="none"
                android:layout_weight="20"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/pTypeTV"
                android:enabled="false"
                android:inputType="none"
                android:layout_weight="80"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="Name"
                android:id="@+id/nameTV"
                android:enabled="false"
                android:inputType="none"
                android:layout_weight="20"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/pNameTV"
                android:enabled="false"
                android:inputType="none"
                android:layout_weight="80"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="Code"
                android:id="@+id/codeTV"
                android:enabled="false"
                android:inputType="none"
                android:layout_weight="20"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/pCodeTV"
                android:enabled="false"
                android:inputType="none"
                android:layout_weight="80"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="Finish"
                android:id="@+id/finishTV"
                android:enabled="false"
                android:inputType="none"
                android:layout_weight="20"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/pFinishTV"
                android:enabled="false"
                android:inputType="none"
                android:layout_weight="80"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="Long Lasting"
                android:id="@+id/longLastingTV"
                android:enabled="false"
                android:inputType="none"
                android:layout_weight="20"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/pLongLastingTV"
                android:enabled="false"
                android:inputType="none"
                android:layout_weight="80"/>
        </TableRow>
        <TableRow>
 <!-- Just for distance test
           <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="Distance"
                android:id="@+id/distanceTV"
                android:enabled="false"
                android:inputType="none"
                android:layout_weight="20"/>-->
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/pDistanceTV"
                android:enabled="false"
                android:inputType="none"
                android:layout_weight="80"/>
        </TableRow>
        </TableLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:layout_gravity="right"
        >
    <TextView
        android:id="@+id/priceLevelTV"
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>
    </LinearLayout>

</LinearLayout>

